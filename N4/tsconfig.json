{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react",
    "module": "commonjs",
    "paths": {
      "~/*": ["./src/*"],
      "components/*": ["./src/components/*"],
      "api/*": ["./src/api/*"],
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
